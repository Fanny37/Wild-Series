{% extends "base.html.twig" %}
{% block title %}Saison #{{ season.id }}{% endblock %}

{% block body %}       
    <h2>Saison {{ season.number }} de {{ program.title }} - {{ season.year }}</h2>
    <p>{{ season.description }}</p>

    <h2>Liste des épisodes</h2>
    <ul>
    {% for episode in episodes %}
       <a href="{{ path("program_episode_show", { slug: program.slug, seasonId: season.id, episodeSlug: episode.slug }) }}"><li>Episode {{ episode.number }} : {{ episode.title }}</li></a>
      {% else %}
      <li>Aucune série trouvée.</li>
    {% endfor %} 
    </ul>

    
    <a href="{{ path("program_show", { slug: program.slug }) }}">
    Retour à la fiche du programme
    </a>
{% endblock %}